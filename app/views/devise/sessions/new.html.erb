<div class="container ">
    <div class="row">
        <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded shadow shadow-sm">
                        <div class="card-header">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">
                          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <div class="form-group">
                                    <label for="uname1">Email/Username</label>
                                    <!-- <input type="text" class="form-control form-control-lg rounded-0" name="uname1" id="uname1" required=""> -->
                                    <%= f.text_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-lg rounded-0",:required=>true %>
                                    <div class="invalid-feedback">Oops, you missed this one.</div>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <!-- <input type="password" class="form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password"> -->
                                    <%= f.password_field :password, autocomplete: "current-password",class: "form-control form-control-lg rounded-0",:required=>true %>
                                    <div class="invalid-feedback">Enter your password too!</div>
                                </div>
                                <% if devise_mapping.rememberable? %>
                                  <div>
                                    <label class="custom-control custom-checkbox">
                                        <%= f.check_box :remember_me %>
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description small text-dark">Remember me on this computer</span>
                                    </label>
                                  </div>
                                <% end %>
                                <%= f.submit "Login" ,class: "btn btn-success btn-lg float-right"%>
                            <%end%>
                            <div class="text-left">
                                <p><h4>Don't have account?</h3> <a href="/users/sign_up"><h4><strong>Register</strong></h3></a></p>
                            </div>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->

                </div>


            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->
