<div id="map" class="map"></div>

<h2>Latitude: <span id="lat"></span> </h2>
<h2>Longitude: <span id="lon"></span></h2>
<button class="btn btn-md btn-success btnShare" data-toggle="collapse" data-target="#share-radio-buttons">share options</button>
<div class="row">
	<div id="share-radio-buttons" class="col-6 collapse">
		<div class="col-6">
			<div class="custom-control custom-radio custom-control-inline ">
				<input type="radio" class="custom-control-input" id="public-radio-btn" name="example" value="public">
				<label class="custom-control-label" for="public-radio-btn">Public</label>
			</div>
		</div>
	</div>
</div>
<div class="col-6">
	<div class="custom-control custom-radio custom-control-inline btnFriends">
		<input type="radio" class="custom-control-input" id="friends-radio-btn" name="example" value="friends">
		<label class="custom-control-label" for="friends-radio-btn">Friends</label>
	</div>
</div>
<div class="col-12 frndShareOptions">

	<div class="description">share with selected user</div></br>

	<%@all_users.each_with_index do |user,index|%>
		<div class="col-6">
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input user-checkbox" id="radio-<%=index%>" name="users" value="<%=user.id%>">
				<label class="custom-control-label" for="radio-<%=index%>"> <%=user.username%></label>
			</div>
		</div>
	<%end%>
</div>
<div class="btn btn-sm btn-success btnfinalShare">Share Now</div>

</div>
